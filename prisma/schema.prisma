// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Patient {
  id              Int         @id @default(autoincrement())
  name            String
  email           String      @unique
  password        String
  last_session    DateTime?
  date_born       DateTime?
  update_at       DateTime    @default(now()) @updatedAt
  create_at       DateTime    @default(now())

  @@map("patients")
}

model Doctor {
  id              Int        @id @default(autoincrement())
  name            String
  email           String     @unique
  password        String
  nrocolegiatura  Int        @unique

  especialidad    DoctorSpecialty[]

  last_session    DateTime?
  date_born       DateTime?
  update_at       DateTime   @default(now()) @updatedAt
  create_at       DateTime   @default(now())

  @@map("doctor")
}

model Specialty {
  id              Int        @id @default(autoincrement())
  name            String

  doctor          DoctorSpecialty[]

  update_at       DateTime   @default(now()) @updatedAt
  create_at       DateTime   @default(now())


  @@map("specialty")
}

model DoctorSpecialty {
  id               Int       @id @default(autoincrement())
  doctor           Doctor    @relation(fields: [doctor_id], references: [id])
  doctor_id        Int
  especialidad     Specialty @relation(fields: [especialidad_id], references: [id])
  especialidad_id  Int

  @@map("doctorspecialty")
}




